# === Runtime Environment ===
ENV=DEV
VERBOSE=true

# === OpenAI ===
OPENAI_MODEL=gpt-3.5-turbo

# === LLM Agent Config ===
AGENT_MODE=llm-fixed
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000
LLM_SCHEMA_RETRIES=2
DUMP_LLM_JSON_DIR=./.cache/llm_dumps

# === Domains ===
# Frontend and Backend public URLs
BACKEND_DOMAIN=https://api-agenticscraper.onrender.com
FRONTEND_DOMAIN=https://agenticscraper.onrender.com

# === Authentication and Security ===
AUTH0_ALGORITHMS=["RS256"]
AUTH0_DOMAIN=dev-xxxxxx.us.auth0.com
AUTH0_ISSUER=https://dev-xxxxxx.us.auth0.com/
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
# Backend domain (same as variable BACKEND_DOMAIN)
AUTH0_API_AUDIENCE=https://api-agenticscraper.onrender.com
# Backend domain (auth/callback route)
AUTH0_REDIRECT_URI=https://api-agenticscraper.onrender.com/api/v1/auth/callback
ENCRYPTION_SECRET=<python -c "cryptographyFernet.generate_key().decode()">

# === Network Settings ===
MAX_CONCURRENT_REQUESTS=3
RETRY_ATTEMPTS=1

# === Concurrency Settings ===
FETCH_CONCURRENCY=10
LLM_CONCURRENCY=10

# === Screenshot Settings ===
SCREENSHOT_ENABLED=false
SCREENSHOT_DIR=screenshots

# === Logging Settings ===
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_BYTES=1000000
LOG_BACKUP_COUNT=5
LOG_FORMAT=plain
