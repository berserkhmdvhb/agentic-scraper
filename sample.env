# === Runtime Environment ===
ENV=DEV
DEBUG=1

# === OpenAI ===
OPENAI_API_KEY=sk-proj-...
OPENAI_PROJECT_ID=proj_...

# === LLM Agent Config ===
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.0

# === Network Settings ===
MAX_CONCURRENT_REQUESTS=3

# === Screenshot Settings ===
SCREENSHOT_ENABLED=true
SCREENSHOT_DIR=screenshots

# === Logging Settings ===
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs             # Root directory; subfolder is based on ENV (e.g., logs/DEV/)
LOG_MAX_BYTES=1000000    # Max size in bytes before rotating log file
LOG_BACKUP_COUNT=5       # Number of rotated log files to keep
LOG_FORMAT=plain         # 'plain' or 'json'
